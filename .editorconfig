# .editorconfig
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.cpp]
indent_size = 4

[*.java]
indent_size = 4

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.go]
indent_size = 4

[*.md]
trim_trailing_whitespace = false